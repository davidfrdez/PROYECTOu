@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/estiles.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<div class="continer">
    <div class="logindata">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Usuario</label>
            <input type="email" class="form-control" id="Usuario" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="Contraseña">
        </div>
        <button type="submit" class="btn btn-primary" onclick="Validar()">Ingresar</button>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>

<script>
    function Validar() {
        let Usuario = document.getElementById("Usuario").value;
        let Contraseña = document.getElementById("Contraseña").value;
        let obj = {
            Usuario: Usuario,
            Contraseña: Contraseña
        }
        $.ajax({
            url : "/ProyectoU/Validar",
            type: "POST",
            data: obj,
            success: function (json) {
                if (json ==1) {
                    window.location.href = '/ProyectoU/Dashboard';
                }else{
                    window.location.href = '/ProyectoU/index';
                }
            },
            Error:function (json) {
                console.log(json);
            }
        });
    }
</script>
